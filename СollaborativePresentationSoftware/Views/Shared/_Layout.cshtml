<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/СollaborativePresentationSoftware.styles.css" asp-append-version="true" />
</head>
<body class="m-0 p-0">
    <header>
        <nav class="navbar bg-light">
            <div class="container-fluid">
                <div>
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">PresentationApp</a>
                </div>
                <div>
                    <h2>Users</h2>
                </div>
                <div class="btn-group">
                        @if(User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <p class="text-secondary m-2">@User.Identity.Name</p>
                            <a asp-controller="Enter" asp-action="LogOut" class="btn btn-danger">LogOut</a>
                        }
                    else
                    {
                        <a asp-controller="Enter" asp-action="SingIn" class="btn btn-outline-secondary">SingIn</a>
                        <a asp-controller="Enter" asp-action="LogIn" class="btn btn-primary">LogIn</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">        
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
